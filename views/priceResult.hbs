<h2>{{title}}</h2>

{{#if properties}}
  <p>Showing results for price range: ${{min}} â€“ ${{max}}</p>

  <table class="data-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Country</th>
        <th>Room Type</th>
        <th>Price ($)</th>
        <th>Service Fee ($)</th>
        <th>Thumbnail</th>
      </tr>
    </thead>
    <tbody>
      {{#each properties}}
        <tr>
          <td>{{id}}</td>
          <td>{{NAME}}</td>
          <td>{{country}}</td>
          <td>{{this.[room type]}}</td>
          <td>{{price}}</td>
          <td>{{serviceFee this.[service fee]}}</td>
          <td>
            <img src="{{thumbnail}}" alt="Property Image" width="120" height="90" style="border-radius: 8px;">
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>No properties found in this price range (${{min}} - ${{max}}).</p>
{{/if}}
